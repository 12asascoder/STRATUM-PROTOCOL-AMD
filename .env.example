# STRATUM PROTOCOL - Environment Configuration Template
# Copy to .env and fill in actual values

# ============================================================================
# PLATFORM CONFIGURATION
# ============================================================================
ENVIRONMENT=development  # development | staging | production
PLATFORM_VERSION=1.0.0
DEPLOYMENT_REGION=us-east-1
SOVEREIGN_JURISDICTION=US

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL (Primary Database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=stratum_protocol
POSTGRES_USER=stratum_admin
POSTGRES_PASSWORD=changeme_secure_password

# TimescaleDB (Time-Series Data)
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_DB=stratum_timeseries
TIMESCALE_USER=timescale_admin
TIMESCALE_PASSWORD=changeme_secure_password

# Neo4j (Knowledge Graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme_secure_password
NEO4J_DATABASE=stratum_graph

# Redis (Cache & Session Store)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=changeme_secure_password
REDIS_DB=0

# MongoDB (Unstructured Data)
MONGODB_URI=mongodb://localhost:27017/stratum_unstructured
MONGODB_USER=mongo_admin
MONGODB_PASSWORD=changeme_secure_password

# ============================================================================
# MESSAGE BROKER
# ============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_SASL_USERNAME=kafka_admin
KAFKA_SASL_PASSWORD=changeme_secure_password

# ============================================================================
# AUTHENTICATION & AUTHORIZATION
# ============================================================================
JWT_SECRET_KEY=changeme_super_secure_secret_key_min_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

OAUTH2_CLIENT_ID=stratum_client_id
OAUTH2_CLIENT_SECRET=changeme_oauth_secret
OAUTH2_ISSUER_URL=https://auth.stratum-protocol.io

# ============================================================================
# ENCRYPTION & SECURITY
# ============================================================================
DATA_ENCRYPTION_KEY=changeme_32_byte_encryption_key_here
LEDGER_SIGNATURE_KEY=changeme_ledger_signing_key
TLS_CERT_PATH=/etc/ssl/certs/stratum.crt
TLS_KEY_PATH=/etc/ssl/private/stratum.key

# ============================================================================
# AI & ML CONFIGURATION
# ============================================================================

# Model Training
MODEL_REGISTRY_URL=http://localhost:5000
MLFLOW_TRACKING_URI=http://localhost:5001
RAY_HEAD_NODE=localhost:6379
PYTORCH_CUDA_ENABLED=true
TRAINING_GPU_MEMORY_FRACTION=0.8

# Federated Learning
FEDERATED_SERVER_URL=http://localhost:8080
FEDERATED_MIN_CLIENTS=3
FEDERATED_ROUNDS=100
DIFFERENTIAL_PRIVACY_EPSILON=1.0

# ============================================================================
# OBSERVABILITY
# ============================================================================

# Prometheus
PROMETHEUS_URL=http://localhost:9090

# Grafana
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=changeme_grafana_api_key

# Jaeger (Distributed Tracing)
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
JAEGER_SAMPLER_TYPE=probabilistic
JAEGER_SAMPLER_PARAM=0.1

# Elasticsearch (Logging)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme_elastic_password

# ============================================================================
# EXTERNAL APIs
# ============================================================================

# Weather Data
WEATHER_API_KEY=changeme_weather_api_key
WEATHER_API_URL=https://api.weather.com/v1

# Social Sentiment
TWITTER_API_KEY=changeme_twitter_api_key
TWITTER_API_SECRET=changeme_twitter_api_secret

# Economic Data
ECONOMIC_DATA_API_KEY=changeme_economic_api_key

# Traffic Data
TRAFFIC_API_KEY=changeme_traffic_api_key

# ============================================================================
# CLOUD PROVIDER CONFIGURATION
# ============================================================================

# AWS
AWS_ACCESS_KEY_ID=changeme_aws_access_key
AWS_SECRET_ACCESS_KEY=changeme_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=stratum-protocol-data
AWS_EKS_CLUSTER=stratum-production

# Azure
AZURE_SUBSCRIPTION_ID=changeme_subscription_id
AZURE_CLIENT_ID=changeme_client_id
AZURE_CLIENT_SECRET=changeme_client_secret
AZURE_TENANT_ID=changeme_tenant_id
AZURE_STORAGE_ACCOUNT=stratumprotocol

# GCP
GCP_PROJECT_ID=stratum-protocol
GCP_CREDENTIALS_PATH=/etc/secrets/gcp-credentials.json
GCP_STORAGE_BUCKET=stratum-protocol-data

# ============================================================================
# SERVICE ENDPOINTS
# ============================================================================
DATA_INGESTION_SERVICE_URL=http://localhost:8001
KNOWLEDGE_GRAPH_SERVICE_URL=http://localhost:8002
STATE_ESTIMATION_SERVICE_URL=http://localhost:8003
CASCADING_FAILURE_SERVICE_URL=http://localhost:8004
CITIZEN_BEHAVIOR_SERVICE_URL=http://localhost:8005
POLICY_SIMULATION_SERVICE_URL=http://localhost:8006
ECONOMIC_INTELLIGENCE_SERVICE_URL=http://localhost:8007
DECISION_LEDGER_SERVICE_URL=http://localhost:8008
FEDERATED_INTELLIGENCE_SERVICE_URL=http://localhost:8009
SOVEREIGN_GOVERNANCE_SERVICE_URL=http://localhost:8010
CYBER_DEFENSE_SERVICE_URL=http://localhost:8011
AUTONOMOUS_ORCHESTRATION_SERVICE_URL=http://localhost:8012
EVOLUTION_SIMULATOR_SERVICE_URL=http://localhost:8013
DIGITAL_TWIN_SERVICE_URL=http://localhost:8014
ADAPTIVE_ENGINE_SERVICE_URL=http://localhost:8015

# ============================================================================
# RATE LIMITING & THROTTLING
# ============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_AUTONOMOUS_ACTIONS=false
ENABLE_FEDERATED_LEARNING=true
ENABLE_CYBER_DEFENSE=true
ENABLE_REAL_TIME_ORCHESTRATION=false
ENABLE_VR_INTERFACE=false

# ============================================================================
# COMPLIANCE & GOVERNANCE
# ============================================================================
DATA_RESIDENCY_REGION=US
GDPR_COMPLIANCE_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555
EXPLAINABILITY_REQUIRED=true
BIAS_DETECTION_THRESHOLD=0.1

# ============================================================================
# ALERT CONFIGURATION
# ============================================================================
ALERT_EMAIL=alerts@stratum-protocol.io
PAGERDUTY_API_KEY=changeme_pagerduty_key
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================================================
# BACKUP & DISASTER RECOVERY
# ============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90
DISASTER_RECOVERY_REGION=us-west-2
